                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>

@code {
    public string OrderNumberStr { get; set; }

    private void NavigateToOrder()
    {
        int orderNo = 0;
        try
        {
            orderNo = int.Parse(OrderNumberStr);
        }
        catch
        {
        }
        NavigationManager.NavigateTo("/order/" + orderNo,true);
        StateHasChanged();
    }

}